        <% flash.success.forEach(function (message) { %>
          if (window.AppUtils && window.AppUtils.toast) {
            window.AppUtils.toast.show('<%= message %>', 'success');
          }
        <% }); %>
      <% } %>
      
      <% if (flash.error && flash.error.length > 0) { %>
