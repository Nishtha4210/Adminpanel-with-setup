<%- include('./_head', { title: blog.title }) %>
<a href="/user/blogs" class="btn btn-secondary mb-3">Back to Blogs</a>
<div class="card p-3">
  <% if (blog.blogImage) { %>
    <div class="text-center mb-3">
      <img src="<%= blog.blogImage %>" alt="Blog" style="width:100%; max-height:400px; object-fit:cover; border-radius:12px;">
    </div>
  <% } %>

  <h2 class="mb-2"><%= blog.title %></h2>
  <div class="text-muted-2 mb-3">
    <span><i class="material-symbols-rounded" style="font-size:16px; vertical-align:middle;">person</i> <%= blog.author ? blog.author.name : blog.authorName %></span>
    · <span><i class="material-symbols-rounded" style="font-size:16px; vertical-align:middle;">category</i> <%= blog.category ? blog.category.name : 'Uncategorized' %></span>
    · <span><i class="material-symbols-rounded" style="font-size:16px; vertical-align:middle;">event</i> <%= new Date(blog.createdAt).toLocaleDateString() %></span>
  </div>

  <div class="surface p-3" style="border-radius:12px;">
    <div style="white-space: pre-wrap; word-wrap: break-word;">
      <%= blog.content %>
    </div>
  </div>

  <div class="d-flex gap-2 mt-3">
    <a href="/user/blogs" class="btn btn-outline-primary">All Blogs</a>
    <a href="/user/profile" class="btn btn-primary">My Profile</a>
  </div>
</div>
<%- include('./_foot') %>